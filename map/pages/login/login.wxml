<!--logs.wxml-->
<view class="login-container">
  <view class="header">
    <text class="title">登录</text>
  </view>
  <view class="username">
    <image src='../images/username.png' />
    <input class="input" type="text" placeholder="请输入用户名" bindblur="usernameInput" cursor-spacing='50' />
  </view>
  <view class="password">
    <image src='../images/password.png' />
    <input class="input" type="text" password placeholder="请输入密码" bindblur="passwordInput" cursor-spacing='50' />
  </view>
  <view class="login">
    <button  class="login-btn" bindtap="loginaction">登录</button>
  </view>
</view>
